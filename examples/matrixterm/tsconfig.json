{
  "compilerOptions": {
    "composite": true,
    "target": "ES2017",
    "emitDeclarationOnly": false,
    "declaration": true,
    "declarationMap": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": false,
    "module": "amd",
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./build",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/matrix-type-declarations"
    ],
    "lib": [
      "es2016",
      "dom"
  ]
  },
  "paths": {
  },

  "include": [
    "src/*.ts", "src/**/*.ts",
    
  ]
}
